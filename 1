n=int(input("Enter a number:"))
times=n//2+1
for i in range(1,n):
    if(i<times):
        
        print('*',end="")
        for j in range(0,times-1):
            print(' ',end="")
        if(i==1):
            for k in range(0,times):
                print('*',end="")
            print('')        
        else:
            print('*')
    elif(i>times):
        pass
    else:
        for j in range(0,n+1):
            print('*',end='')
        print('')
